rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Las imágenes de las habitaciones solo pueden ser escritas por administradores.
    // Cualquiera puede leerlas para mostrarlas en la app.
    match /habitaciones/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && 
                      exists(/databases/(default)/documents/usuarios/$(request.auth.uid)) &&
                      get(/databases/(default)/documents/usuarios/$(request.auth.uid)).data.rol == 'admin';
    }

    // Opcional: Reglas para imágenes de perfil de usuario (si se implementa a futuro)
    // match /perfiles/{userId}/{allPaths=**} {
    //   allow read;
    //   allow write: if request.auth.uid == userId;
    // }
  }
}
